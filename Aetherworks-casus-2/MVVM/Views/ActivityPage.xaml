<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aetherworks_casus_2.MVVM.Views.ActivityPage"
             Title="Activity Details"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Activity Name -->
            <Frame BackgroundColor="#2196F3"
               CornerRadius="10"
               Padding="15">
                <Label x:Name="ActivityNameLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />
            </Frame>

            <!-- Activity Image (Boven Details) -->
            <Image x:Name="ActivityImage"
               HeightRequest="250"
               Aspect="AspectFill"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               IsVisible="False"
               Margin="0,10,0,10" />

            <!-- Activity Details -->
            <Frame BackgroundColor="White"
               CornerRadius="10"
               BorderColor="#D3D3D3"
               Padding="15">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout>
                        <Label Text="Date &amp; Time:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#555555" />
                        <Label x:Name="ActivityDateTimeLabel"
                           FontSize="16"
                           TextColor="Black" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Location:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#555555" />
                        <Label x:Name="ActivityLocationLabel"
                           FontSize="16"
                           TextColor="Black" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Description:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#555555" />
                        <Label x:Name="ActivityDescriptionLabel"
                           FontSize="14"
                           TextColor="#555555" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>


            <!-- Availability -->
            <Frame BackgroundColor="#E3F2FD"
                   CornerRadius="10"
                   BorderColor="#2196F3"
                   Padding="15">
                <HorizontalStackLayout>
                    <Label x:Name="ActivityAvailabilityLabel"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Green" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Sign Up Button -->
            <Button x:Name="SignUpButton"
                Text="Sign Up"
                BackgroundColor="Green"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50"
                FontAttributes="Bold"
                FontSize="18"
                Clicked="OnSignUpButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                IsVisible="{Binding IsUserNotSignedUp}" />

            <Button x:Name="SignOutButton"
                Text="You are signed in"
                BackgroundColor="Red"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50"
                FontAttributes="Bold"
                FontSize="18"
                Clicked="OnSignOutButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                IsVisible="{Binding IsUserSignedUp}" />


            <!-- QR Code Button (Only Visible for Admins) -->
            <Button x:Name="GenerateQRCodeButton"
                    Text="Generate QR Code"
                    Clicked="OnGenerateQRCodeClicked"
                    BackgroundColor="Blue"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    IsVisible="False"/>

            <Button x:Name="ScanAttendanceButton"
                    Text="Scan Attenence"
                    Clicked="OnScanQRCodeButtonClicked"
                    BackgroundColor="Blue"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    IsVisible="False"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>