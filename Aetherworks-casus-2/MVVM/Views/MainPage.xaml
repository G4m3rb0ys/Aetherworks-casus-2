<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Aetherworks_casus_2.MVVM.ViewModels"
    xmlns:models="clr-namespace:Aetherworks_casus_2.MVVM.Models"
    x:Class="Aetherworks_casus_2.MVVM.Views.MainPage">

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label Text="Eerstvolgende activiteit"
                       FontAttributes="Bold"
                       FontSize="18"
                       HorizontalOptions="Center" />

                <Frame BorderColor="Gray" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding NextActivity.Name}"
                               FontAttributes="Bold" FontSize="16" />
                        <Label Text="{Binding NextActivity.ActivityDate, StringFormat='{0:dd MMM yyyy HH:mm}'}"
                               FontSize="13" />
                        <Label Text="{Binding NextActivity.Description}"
                               FontSize="13" />
                        <!-- <Label Text="{Binding NextActivity.Location.Name}" FontSize="13" /> -->
                    </VerticalStackLayout>
                </Frame>

                <Label Text="Komende activiteiten"
                       FontAttributes="Bold"
                       FontSize="18"
                       HorizontalOptions="Center" />

                <CollectionView ItemsSource="{Binding UpcomingActivities}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:VictuzActivity">
                            <Frame BorderColor="LightGray" Padding="10" Margin="0,5">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}"
                                           FontAttributes="Bold" FontSize="16" />
                                    <Label Text="{Binding ActivityDate, StringFormat='{0:dd MMM yyyy HH:mm}'}"
                                           FontSize="13" />
                                    <Label Text="{Binding Description}"
                                           FontSize="13" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     HeightRequest="50"
                     BackgroundColor="#E0E0E0"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="End">

            <Label Text="Home"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>
            <Label Text="Activities"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center" />
            <Label Text="Events"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center" />
            <Label Text="Settings"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center" />
            <Label Text="Profile"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center" />
        </StackLayout>

    </Grid>
</ContentPage>
